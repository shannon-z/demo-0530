{
  "semi": false,
  "overrides": [
    {
      "files": "*.test.js",
      "options": {
        "semi": true
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["*.less"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.scss"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.js"],
      "options": {
        "semi": false,
        "trailingComma": "none",
        "singleQuote": true,
        "tabWidth": 2,
        "printWidth": 80
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "semi": true,
        "tabWidth": 4,
        "printWidth": 120
      }
    },
    {
      "files": ["*.vue"],
      "options": {
        "semi": false,
        "tabWidth": 2
      }
    }
  ]
}
